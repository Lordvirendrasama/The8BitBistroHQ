
{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" }
      },
      "required": ["uid"]
    },
    "member": {
      "title": "Member",
      "description": "Represents a loyalty program member.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "username": { "type": "string"},
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "tier": { "type": "string", "enum": ["Red", "Green", "Gold"] },
        "level": { "type": "number" },
        "xp": { "type": "number" },
        "points": { "type": "number" },
        "totalSpent": { "type": "number" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "joinDate": { "type": "string", "format": "date" },
        "pendingAmount": { "type": "number" }
      },
      "required": ["name", "username", "tier", "level", "xp", "points", "totalSpent", "avatarUrl", "joinDate"]
    },
    "ownerTask": {
      "title": "Owner Task",
      "description": "A high-level task for the bistro owner (Viren).",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "dueDateTime": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["pending", "completed"] },
        "priority": { "type": "string", "enum": ["low", "medium", "high"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "order": { "type": "number" },
        "isSeparator": { "type": "boolean" },
        "isRecurring": { "type": "boolean" }
      },
      "required": ["title", "status", "priority", "order"]
    },
    "audioAnnouncement": {
      "title": "Audio Announcement",
      "description": "A global voice broadcast message.",
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["text", "timestamp"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/ownerTasks/{taskId}": {
      "schema": { "$ref": "#/entities/ownerTask" },
      "description": "Stores specialized owner-only tasks."
    },
    "/announcements/{id}": {
      "schema": { "$ref": "#/entities/audioAnnouncement" },
      "description": "System-wide audio announcements for cross-device synchronization."
    },
    "/stations/{id}": {
      "description": "Active gaming stations and tables."
    },
    "/bills/{id}": {
      "description": "Historical records of paid bills."
    }
  }
}
