
{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" }
      },
      "required": ["uid"]
    },
    "ownerTask": {
      "title": "Owner Task",
      "description": "A high-level task for the bistro owner (Viren).",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "dueDateTime": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["pending", "completed"] },
        "priority": { "type": "string", "enum": ["low", "medium", "high"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "order": { "type": "number", "description": "Manual sort order." },
        "isSeparator": { "type": "boolean", "description": "Whether this is a visual separator instead of a task." }
      },
      "required": ["title", "status", "priority", "order"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/ownerTasks/{taskId}": {
      "schema": { "$ref": "#/entities/ownerTask" },
      "description": "Stores specialized owner-only tasks."
    }
  }
}
